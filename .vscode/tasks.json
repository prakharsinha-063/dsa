{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Run with I/O",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++ -std=c++17 '${file}' -o '${fileDirname}/a.out' && '${fileDirname}/a.out' < '${workspaceFolder}/input.txt' > '${workspaceFolder}/output.txt'"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
